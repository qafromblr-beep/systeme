<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <!-- Улучшенный паттерн для тестов: время, поток, уровень и сокращенное имя класса -->
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{1.} - %msg%n"/>
        </Console>

        <!-- RollingFile для долгосрочного хранения логов -->
        <RollingFile name="File" fileName="target/logs/test-run.log"
                     filePattern="target/logs/archive/test-run-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB"/> <!-- Ротация по размеру удобнее для автотестов -->
                <TimeBasedTriggeringPolicy />
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Указываем корневой пакет "tests", чтобы охватить все ваши тестовые классы -->
        <Logger name="tests" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>

        <!-- Логи системных библиотек (Selenium, драйверы) будут только уровня INFO -->
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>

</Configuration>
